@using Banko.Client.Models.Account

<MudPaper Class="pa-4 rounded-lg mud-height-full" Elevation="0">
  <MudItem xs="12" Class="d-flex mb-2 align-center">
    <MudIcon Icon="@Icons.Material.Filled.AccountBalance" Class="mr-2" />
    <MudText Typo="Typo.h6" Class="mr-2">Accounts</MudText>
  </MudItem>

  @if (accounts?.Length > 0)
  {
    <MudItem xs="12" Class="d-flex align-baseline">
      <MudText Typo="Typo.h5" Class="mr-2">@accounts.Length</MudText>
      <MudText Typo="Typo.body2">Total Accounts</MudText>
    </MudItem>

    <MudDivider Class="my-4" />

    <MudList T="object" Dense="true" ReadOnly="true">
      @foreach (var accountType in accounts.GroupBy(a => a.Type).OrderByDescending(g => g.Count()))
      {
        <MudListItem T="object">
          <MudText Typo="Typo.subtitle2">@accountType.Key: @accountType.Count()</MudText>
        </MudListItem>
      }
    </MudList>
  }
  else
  {
    <MudAlert Severity="Severity.Info" Class="mt-3">No accounts yet</MudAlert>
  }
</MudPaper>
@code {
  [Parameter] public AccountRead[]? accounts { get; set; }

  protected override void OnParametersSet()
  {
    base.OnParametersSet();
  }
}