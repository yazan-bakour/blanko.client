{
  "$schema": "https://json.schemastore.org/watch",
  "watchOptions": {
    "usePolling": false,
    "excludeFiles": ["**/*.git/**", "**/bin/**", "**/obj/**"],
    "excludeDirectories": ["bin", "obj", "node_modules"],
    "watchFiles": [
      "**/*.razor",
      "**/*.razor.css",
      "**/*.css",
      "**/*.cs",
      "**/*.json"
    ]
  }
}
